# FastAPI TODO Application Environment Configuration
# Copy this to .env and update with your actual values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME="FastAPI TODO & Employee Management System"
VERSION=1.0.0
API_V1_STR=/api/v1
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
LOG_TO_FILE=false

# Security
SECRET_KEY=your-secret-key-change-this-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# TODO Database (SQLite)
DATABASE_URL=sqlite:///./todo_app.db

# Employee Database (PostgreSQL)
POSTGRES_DATABASE_URL=postgresql://postgres:admin@1234@localhost:5432/employees_db

# PostgreSQL Connection Details
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin@1234
POSTGRES_DB=employees_db

# Connection Pool Settings
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20
POSTGRES_POOL_RECYCLE=3600

# SQL Debug Mode
SQL_DEBUG=false

# CORS Origins (comma separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080

# Logging
LOG_LEVEL=INFO