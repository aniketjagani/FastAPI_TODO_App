# FastAPI TODO App Environment Variables
# Copy this file to .env and modify the values as needed

# Application settings
PROJECT_NAME=FastAPI TODO App
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-secret-key-change-this-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# Database
DATABASE_URL=sqlite:///./todo_app.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname

# CORS Origins (comma separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080

# Logging
LOG_LEVEL=INFO