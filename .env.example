# FastAPI TODO Application Environment Configuration (Enhanced)
# Copy this to .env and update with your actual values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME="FastAPI TODO & Employee Management System"
VERSION=1.0.0
API_V1_STR=/api/v1
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
LOG_TO_FILE=false

# ===========================================
# SECURITY & AUTHENTICATION
# ===========================================
# JWT Configuration
JWT_SECRET_KEY="jwt-secret-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Authentication Features
ENABLE_AUTHENTICATION=true
ENABLE_API_KEYS=true

# Security Settings
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900

# Security
SECRET_KEY=your-secret-key-change-this-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# TODO Database (SQLite)
DATABASE_URL=sqlite:///./todo_app.db

# Employee Database (PostgreSQL)
POSTGRES_DATABASE_URL=postgresql://postgres:admin@1234@localhost:5432/employees_db

# PostgreSQL Connection Details
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin@1234
POSTGRES_DB=employees_db

# Connection Pool Settings
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20
POSTGRES_POOL_RECYCLE=3600

# SQL Debug Mode
SQL_DEBUG=false

# CORS Origins (comma separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080

# Logging
LOG_LEVEL=INFO

# ===========================================
# REDIS & CACHING
# ===========================================
# Redis Configuration (optional)
# REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TTL=300

# ===========================================
# RATE LIMITING & PERFORMANCE
# ===========================================
RATE_LIMIT_PER_MINUTE=100
USER_RATE_LIMIT_PER_MINUTE=1000
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================
ENABLE_METRICS=true
SLOW_QUERY_THRESHOLD=1.0
ENABLE_TRACING=false

# ===========================================
# ADVANCED FEATURES
# ===========================================
# Export/Import Settings
MAX_EXPORT_RECORDS=100000
EXPORT_FILE_TTL_HOURS=24

# Search Configuration
ENABLE_FUZZY_SEARCH=true
SEARCH_RESULTS_LIMIT=1000

# Bulk Operations
MAX_BULK_OPERATIONS=1000
BULK_OPERATION_TIMEOUT=300

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_EXPORT_IMPORT=true
FEATURE_BULK_OPERATIONS=true